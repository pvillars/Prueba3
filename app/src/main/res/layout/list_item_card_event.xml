<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_gravity="center"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/imageListIv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"

        android:src="@mipmap/choose_image"/>

    <TextView
        android:id="@+id/nameListTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XXXXXXX XXXX"
        android:layout_below="@+id/imageListIv"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dateStartListTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageListIv"
        android:layout_alignParentRight="true"
        android:text="yyyyyy  yy "
        android:textStyle="italic" />

    <TextView
        android:id="@+id/authorNameListTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s@@@@@@@@@@@s"
        android:layout_above="@+id/nameListTv"
        android:layout_alignParentEnd="true" />

</RelativeLayout>