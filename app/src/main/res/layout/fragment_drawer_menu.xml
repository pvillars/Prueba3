<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="8dp"
    tools:context="cl.anpetrus.prueba3.views.login.drawer.DrawerFragment">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/avatarCi"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:src="@mipmap/ic_launcher_round"
        app:siBorderColor="@android:color/white"
        app:siBorderWidth="6dp" />

    <TextView
        android:id="@+id/emailTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatarCi"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/takeAvatarTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailTv"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:paddingRight="8dp"
        android:text="Cambiar Foto" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/emailTv"
        android:layout_marginTop="8dp"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/soonEventsTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewLine"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:drawableLeft="@mipmap/ic_add_white_24dp"
        android:text="  Proximos Eventos"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/myEventsTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soonEventsTv"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:drawableLeft="@mipmap/ic_add_white_24dp"
        android:text="  Mis Eventos"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/logoutTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:paddingRight="16dp"
        android:text="Cerrar SesiÃ³n"
        android:textColor="@android:color/white" />


</RelativeLayout>
